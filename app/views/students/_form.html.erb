<%= form_for(@student) do |f| %>
  <% if @student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
      <% @student.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <%= f.hidden_field :user_id, :value => @user.id %>

  <%= f.label :teacher_id, 'teacher id', class: "control-label" %>
  <%= f.text_field :teacher_id, class: "form-control" %>

  <%= f.label :name, 'student name', class: "control-label" %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.fields_for :user do |user_form| %>
    <%= f.label :name, 'users name', class: "control-label" %>
    <%= user_form.text_field :name %>

    <%= f.label :email, 'email', class: "control-label" %>
    <%= user_form.text_field :email %>

    <%= f.label :encrypted_password, 'password', class: "control-label" %>
    <%= user_form.text_field :encrypted_password %>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
